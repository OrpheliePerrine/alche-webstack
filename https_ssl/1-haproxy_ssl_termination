global
    log /dev/log local0
    log /dev/log local1 notice
    daemon

    ca-base /etc/ssl/certs
    crt-base /etc/haproxy/certs

    ssl-default-bind-options no-sslv3
    ssl-default-bind-ciphers HIGH:!aNULL:!MD5

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend https_front
    bind *:443 ssl crt /etc/haproxy/certs/www.YOUR_DOMAIN.pem
    default_backend web_servers

backend web_servers
    balance roundrobin
    server web-01 web-01.YOUR_DOMAIN:80 check
    server web-02 web-02.YOUR_DOMAIN:80 check
